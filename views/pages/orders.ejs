<!doctype html>

<html lang="en">
	<head>
		<% include ../partials/head.ejs %>
		<title>index.ejs</title>
	</head>
	<body>
		<% include ../partials/header.ejs %>
		<div class="container">
			<div id="content">
				<center><h1>Basket - Orderstatus - Products</h1></center>
				<!-- Outer Row -->
				<div class="row">
					
					<% 
					var index = 0;
					user.orders.forEach(function(product) { 
					
					if(index % 2 == 0 && index != 0) { %>
						<div class="row">
					<% } %>
					<div class="col-sm-6">
					
						<div class="col-sm-10">
							<h2><%= product.name %></h2>
						</div>
						<div class="col-sm-2">
							<b><%= product.price %></b>
						</div>
					</div>
					
					<% if (index % 2 == 1) { %>
						</div>
					<% } 
					index++;
					}); %>
				
				</div>
			</div>
		</div>
		
		<% include ../partials/footer %>

	</body>
</html>