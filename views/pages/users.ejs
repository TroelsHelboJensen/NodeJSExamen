<!doctype html>

<html lang="en">
	<head>
		<title>Users.ejs</title>
		<% include ../partials/head.ejs %>
	</head>
	<body>
		<% include ../partials/header.ejs %>
		<div id="content">
			<div class="container">
				
				<div class="row">
					<% 
					var index = 1;
					users.forEach(function(user) { %>
						<% 
						if(index % 4 == 0) { %>
							<div class="row">
						<% } %>
						<div class="col-sm-4">
						<h1><%= user.name %></h1>
						<p><%= user.username %></p>
						<p><%= user.password %></p>
						</div>
						<% if (index % 3 == 0) { %>
							</div>
						<%}
						index++;
					    }); %>
				</div>
			</div>
		</div>
		<% include ../partials/footer %>
		
	</body>
</html>